{
  "extends": "@forge/tsconfig/internal-package.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "*.ts",
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
